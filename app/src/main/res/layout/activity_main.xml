<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kockadobás játék"
        android:textSize="55dp"
        android:layout_marginHorizontal="@android:dimen/app_icon_size"
        android:layout_marginRight="@android:dimen/app_icon_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gep"
        android:textSize="55dp"
        android:text="GEP"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jatekos"
        android:textSize="45dp"
        android:text="jatekos"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="380dp"
        />

    <Button
        android:id="@+id/dobas"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="65dp"
        android:text="Dobás"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="109dp"
        android:layout_height="103dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="250dp"
        android:contentDescription="kocka"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kocka1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="103dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="380dp"
        android:contentDescription="kocka"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kocka1" />



</RelativeLayout>